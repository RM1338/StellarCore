APP_ENV=development
DEBUG_MODE=fasle
SECRET_KEY=your-secret-key-min-32-chars-change-this-in-production

RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=30
RATE_LIMIT_PER_HOUR=500
RATE_LIMIT_STORAGE=memory

GAIA_ARCHIVE_URL=https://gea.esac.esa.int/tap-server/tap
GAIA_MAX_ROWS=50000
GAIA_TIMEOUT=300

MAX_UPLOAD_SIZE_MB=50
MAX_PARTICLES=100000
MAX_SIMULATION_TIME_GYR=20.0
CACHE_DIR=./data/precomputed

SESSION_TIMEOUT_MINUTES=60
MAX_CONCURRENT_SIMULATIONS=3

LOG_LEVEL=INFO
LOG_FILE=./logs/stellarcore.log
ENABLE_AUDIT_LOG=true

ALLOWED_ORIGINS=https://localhost:8501,https://yourdomain.com
ALLOWED_METHODS=GET,POST
ALLOWED_HEADERS=Content-Type,Authorization

# DATABASE_URL=postgresql://user:pass@localhost/stellarcore

# SENTRY_DSN=
# ANALYTICS_KEY=

ENABLE_SECURITY_HEADERS=true
ENABLE_CSRF_PROTECTION=true
